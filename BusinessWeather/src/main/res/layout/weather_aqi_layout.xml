<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/weather_aqi_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingRight="@dimen/weather_horizontal_margin"
        android:paddingTop="@dimen/weather_horizontal_margin"
        android:src="@drawable/weather_dialog_close_icon" />


    <com.pasc.business.weather.view.WeatherAqiCircleView
        android:id="@+id/weather_aqi_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/weather_bg_aqi_circle" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/weather_aqi_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/weather_aqi_recycler_margin"
        android:layout_marginBottom="@dimen/weather_horizontal_margin"
        android:layout_marginLeft="@dimen/weather_horizontal_margin"
        android:layout_marginRight="@dimen/weather_horizontal_margin"

        />
</LinearLayout>

